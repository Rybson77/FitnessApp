<!-- res/values/themes/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FitnessApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- pozadí celé appky -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <!-- povrch (card, toolbar) -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- primární (toolbar, ripples) -->
        <item name="colorPrimary">@color/colorSurface</item>
        <item name="colorOnPrimary">@color/colorOnSurface</item>

        <!-- accent / sekundární barva -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorOnAccent</item>

        <!-- texty -->
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textColorPrimary">@color/colorOnBackground</item>
    </style>
    <style name="MyDatePickerDialogTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Barva zvýraznění v kalendáři -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Barva vybraného dne a kontrolek -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- Barva textu nadpisu (rok, měsíc) -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Vlastní styl pro DatePicker -->
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <!-- Styl pro samotný DatePicker -->
    <style name="MyDatePickerStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Barva čísel v kalendáři -->
        <item name="android:calendarTextColor">@color/white</item>
        <!-- (volitelné) spinner místo kalendáře -->
        <!-- <item name="android:datePickerMode">spinner</item> -->
    </style>
</resources>


